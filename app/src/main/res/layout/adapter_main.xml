<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="4dp"
    android:id="@+id/card_view_tasks"
    card_view:cardElevation="4dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/textView_description_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:visibility="gone"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/textView_title_main"
            android:textSize="@dimen/description_text_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Login"
            android:layout_below="@id/textView_description_main"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/darker_gray"
            android:text="LOGIN"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_LearnMore"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/textView_description_main"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/textView_Login"
            android:textColor="@android:color/holo_orange_light"
            android:text="LEARN MORE"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>